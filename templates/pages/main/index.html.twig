{% extends 'base.html.twig' %}


{% block body %}
	<h1>Site e-commerce</h1>


	<div class="container mt-4">
		<div class="jumbotron">
			<h1 class="display-4">Bienvenue dans notre boutique</h1>
			<p class="lead">e-commerce est une application qui va te permettre de commander  des articles.</p>
			<hr class="my-4">
			<p>Pour commencer, rendez-vous sur la page d'inscription pour utiliser l'application.</p>
			<a class="btn btn-primary btn-lgz" href="{{ path('app_register') }}" role="button">Inscription</a>
		</div>


		<main class="container mt-4">			
			<section class="row">
				<div class="col-12">
                <h1>Cat√©gories</h1>
                </div>
					{% for category in categories %}
						{% if category.parent == null %}
							<div class="col-12">
								<h2>{{ category.name }}</h2>
							</div>
						{% else %}
							<div class="col-4">
								<div class="card h-100">
									<div class="card-body">
										<h3 class="card-title">{{ category.name }}</h3>
										<a href="{{ path('categories_list', {slug: category.slug}) }}" class="btn btn-primary">Voir les produits</a>
									</div>
								</div>
							</div>
						{% endif %}
					{% endfor %}			
			</section>
		</main>


	{% endblock %}
